<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.project.finalyear.thaispellinggame.activity.GameActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/game"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:animateLayoutChanges="true"
                android:gravity="right"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/soundBG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="10dp"
                    android:visibility="invisible">

                    <Button
                        android:id="@+id/btnSoundBG"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_sound_bg"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btnNoSoundBG"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_sound_bg_mute"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/soundEffect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="10dp"
                    android:visibility="invisible">

                    <Button
                        android:id="@+id/btnSoundEffect"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_sound_effect"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btnNoSoundEffect"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_sound_effect_mute"
                        android:visibility="gone" />

                </RelativeLayout>

                <Button
                    android:id="@+id/btnSetting"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/btn_setting" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
