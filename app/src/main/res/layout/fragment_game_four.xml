<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_game_four"
    tools:context=".fragment.GameFourFragment">

    <include layout="@layout/header_game" />

    <!-- body -->
    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/drop_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:id="@+id/drop_mid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:id="@+id/drop_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"></LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btnCactus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/cactus"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="66dp"
            android:text=""
            android:textColor="#FDE171"
            android:textSize="25sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnCactusLong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/cactus_long"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="140dp"
            android:text=""
            android:textColor="#FDE171"
            android:textSize="25sp"
            android:visibility="invisible" />


        <Button
            android:id="@+id/btnCamel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/camel"
            android:paddingRight="20dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imgBonus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/bg_bonus"
            android:visibility="invisible" />

    </RelativeLayout>

</LinearLayout>

