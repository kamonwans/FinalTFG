<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvAnswerSelect"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_sum_one"
                android:gravity="center"
                android:text="Select"
                android:textColor="#000000"
                android:textSize="18sp" />
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/imgCorrect"
                android:layout_marginLeft="10dp"
                android:src="@drawable/correct"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/imgIncorrect"
                android:layout_marginLeft="10dp"
                android:src="@drawable/incorrect"
                android:layout_width="30dp"
                android:layout_height="30dp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tvAnswerRight"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/bg_answer_right"
            android:gravity="center"
            android:text="Right"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>