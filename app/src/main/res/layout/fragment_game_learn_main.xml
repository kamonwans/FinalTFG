<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainGameLearn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:background="@drawable/bg_learning_main"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/cloud1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="-150dp"
            android:src="@drawable/cloud" />

        <ImageView
            android:id="@+id/cloud2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-100dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/cloud" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:src="@drawable/logo_game_learn" />

        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_above="@id/startGame"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginBottom="60dp"-->
            <!--android:src="@drawable/basket_empty" />-->

        <!--<include layout="@layout/button_setting"/>-->


        <Button
            android:id="@+id/startGame"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_start_game_learn" />

    </RelativeLayout>


</LinearLayout>
